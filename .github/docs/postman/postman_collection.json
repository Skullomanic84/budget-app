              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Fuel\"\n}" },
            "url": {
              "raw": "{{base_url}}/org/{{orgId}}/categories",
              "host": ["{{base_url}}"],
              "path": ["org", "{{orgId}}", "categories"]
            }
          }
        },
        {
          "name": "Delete",
          "request": {
            "method": "DELETE",
