                { "key": "to", "value": "{{to}}" },
                { "key": "type", "value": "{{type}}" }
              ]
            }
          }
        },
        {
          "name": "Create",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"EXPENSE\",\n  \"amount\": 199.99,\n  \"currency\": \"ZAR\",\n  \"date\": \"2025-09-10\",\n  \"categoryId\": null,\n  \"notes\": \"Groceries\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/org/{{orgId}}/transactions",
              "host": ["{{base_url}}"],
              "path": ["org", "{{orgId}}", "transactions"]
            }
          }
        },
        {
          "name": "Patch",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"notes\": \"Groceries @ Checkers\",\n  \"amount\": 189.99\n}"
            },
            "url": {
              "raw": "{{base_url}}/org/{{orgId}}/transactions/{{txnId}}",
              "host": ["{{base_url}}"],
              "path": ["org", "{{orgId}}", "transactions", "{{txnId}}"]
            }
          }
        },
        {
          "name": "Delete",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{base_url}}/org/{{orgId}}/transactions/{{txnId}}",
              "host": ["{{base_url}}"],
              "path": ["org", "{{orgId}}", "transactions", "{{txnId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Summary (Monthly)",
